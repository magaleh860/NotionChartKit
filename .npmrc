engines-strict=true                 # Ensures team consistency - prevents Node 16/18/20 version conflicts
auto-install-peers=true             # Auto-installs peer deps (e.g., chart.js with react-chartjs-2)
shamefully-hoist=false              # Prevents packages from importing undeclared deps - critical for monorepo integrity
strict-peer-dependencies=false      # Allows installation when peer versions conflict (e.g., React ^17 vs ^18)
